<manifest xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartExpense">
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.SmartExpense.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan|stateHidden"/>
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan|stateHidden"/>
        <activity
            android:name=".ForgotPasswordActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan|stateHidden"/>
        <activity
            android:name=".VerifyOTPActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan|stateHidden"/>
        <activity
            android:name=".ResetPasswordActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan|stateHidden"/>
        <activity
            android:name=".MainActivity"
            android:exported="false"/>
        <activity
            android:name=".CalendarActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".DayDetailActivity"
            android:exported="false"
            android:parentActivityName=".CalendarActivity"/>
        <activity
            android:name=".StatisticsActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".PieChartStatisticsActivity"
            android:exported="false"
            android:parentActivityName=".StatisticsActivity"/>
        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".FinancialSettingsActivity"
            android:exported="false"
            android:parentActivityName=".ProfileActivity"/>
        <activity
            android:name=".DisplaySettingsActivity"
            android:exported="false"
            android:parentActivityName=".ProfileActivity"/>
        <activity
            android:name=".CategoryManagementActivity"
            android:exported="false"
            android:parentActivityName=".FinancialSettingsActivity"/>
        <activity
            android:name=".TransactionDetailsActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".AddTransactionActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".AddIncomeActivity"
            android:exported="false"
            android:parentActivityName=".AddTransactionActivity" />
        <activity
            android:name=".AddExpenseActivity"
            android:exported="false"
            android:parentActivityName=".AddTransactionActivity" />
    </application>
</manifest>