<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:fitsSystemWindows="true"
    android:background="@color/bg_app"
    tools:context=".StatisticsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="72dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Thống kê chi tiêu"
                    android:textSize="20sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/inter_semibold"
                    android:textStyle="bold"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Chart Type Tabs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_tab_container"
                android:padding="4dp">

                <TextView
                    android:id="@+id/btnColumnChart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Biểu đồ cột"
                    android:textSize="14sp"
                    android:textColor="@color/primary"
                    android:fontFamily="@font/inter_medium"
                    android:background="@drawable/bg_tab_selected"
                    android:gravity="center"
                    android:paddingVertical="10dp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/btnPieChart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Biểu đồ tròn"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:paddingVertical="10dp"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

            <!-- Balance Display -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số dư"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@font/inter_regular" />

                <TextView
                    android:id="@+id/tvBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.000.000"
                    android:textSize="36sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/inter_bold"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Chart Container -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Chart Legend -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="start"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginEnd="16dp">

                            <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:background="@drawable/circle_income" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thu nhập"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:fontFamily="@font/inter_regular"
                                android:layout_marginStart="6dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:background="@drawable/circle_expense" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chi tiêu"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:fontFamily="@font/inter_regular"
                                android:layout_marginStart="6dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Bar Chart -->

                    <!-- Date Range -->
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <LinearLayout
                            android:id="@+id/chartContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="bottom"
                            android:minHeight="200dp"
                            android:orientation="horizontal"
                            android:paddingVertical="8dp" />

                    </HorizontalScrollView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="16dp">

                        <ImageView
                            android:id="@+id/btnPrevWeek"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_chevron_left"
                            android:clickable="true"
                            android:focusable="true" />

                        <TextView
                            android:id="@+id/tvDateRange"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="01/11/2025 - 07/11/2025"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="center"
                            android:layout_marginHorizontal="12dp" />

                        <ImageView
                            android:id="@+id/btnNextWeek"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_chevron_right"
                            android:clickable="true"
                            android:focusable="true" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Categories Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Chi tiết danh mục"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:fontFamily="@font/inter_semibold" />

                <!-- Legend for categories -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Thu nhập"
                        android:textSize="11sp"
                        android:textColor="@color/income"
                        android:fontFamily="@font/inter_regular"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Chi tiêu"
                        android:textSize="11sp"
                        android:textColor="@color/expense"
                        android:fontFamily="@font/inter_regular" />

                </LinearLayout>

            </LinearLayout>

            <!-- Categories List -->
            <LinearLayout
                android:id="@+id/categoriesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Custom Bottom Navigation Bar -->
    <include
        android:id="@+id/bottom_navigation"
        layout="@layout/custom_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
