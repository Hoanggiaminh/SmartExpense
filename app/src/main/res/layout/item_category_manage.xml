<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <!-- Category Icon -->
        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_item_bg_circle"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivCategoryIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_food"
                app:tint="@color/primary"
                android:contentDescription="@string/transaction_category_icon_desc" />

        </LinearLayout>

        <!-- Category Name -->
        <TextView
            android:id="@+id/tvCategoryName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="@string/sample_category_name"
            android:textColor="@color/text_primary"
            android:fontFamily="@font/inter_medium"
            android:textSize="16sp" />


        <!-- Edit Button -->
        <ImageView
            android:id="@+id/ivEditCategory"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_edit"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            app:tint="@color/text_secondary"
            android:contentDescription="Sửa danh mục"
            android:visibility="gone" />

        <!-- Delete Button -->
        <ImageView
            android:id="@+id/ivDeleteCategory"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            app:tint="@color/expense"
            android:contentDescription="Xóa danh mục"
            android:visibility="gone" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
