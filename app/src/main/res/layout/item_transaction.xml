<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Date Header (chỉ hiển thị khi cần) -->
    <TextView
        android:id="@+id/tvDateHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Hôm nay"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:fontFamily="@font/inter_regular"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:visibility="gone"/>

    <!-- Transaction Item -->
    <LinearLayout
        android:id="@+id/layout_transaction_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="10dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@drawable/ic_item_bg"
            android:layout_marginEnd="10dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivCategoryIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_other"
                android:contentDescription="@string/transaction_category_icon_desc"
                app:tint="@color/primary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTransactionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Lương tháng 10"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:fontFamily="@font/inter_medium"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/tvCategoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Lương thưởng"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:fontFamily="@font/inter_regular" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="+ 5,000,000 VND"
            android:textColor="@color/income"
            android:textSize="17sp"
            android:fontFamily="@font/inter_bold"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>
