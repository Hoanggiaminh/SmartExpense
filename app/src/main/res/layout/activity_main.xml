<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginBottom="90dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/bg_img"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/spacing_medium"
                android:paddingTop="40dp">

                <!-- Greeting -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chào buổi sáng,"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:fontFamily="@font/inter_regular" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gia Minh"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:fontFamily="@font/inter_bold"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <!-- Notification icon -->
                    <ImageView
                        android:layout_width="@dimen/icon_medium"
                        android:layout_height="@dimen/icon_medium"
                        android:src="@drawable/ic_notification"
                        app:tint="@color/white" />

                </LinearLayout>

            </LinearLayout>

            <!-- Main Content with Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="-120dp"
                android:padding="@dimen/spacing_medium">

                <!-- Total Expense Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    android:layout_marginBottom="30dp"
                    android:backgroundTint="@color/primary"
                    app:strokeColor="@color/primary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_large">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tổng chi tiêu tháng trước"
                            android:textColor="@color/on_primary"
                            android:textSize="16sp"
                            android:fontFamily="@font/inter_regular" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2,500,000 VND"
                            android:textColor="@color/on_primary"
                            android:textSize="28sp"
                            android:fontFamily="@font/inter_bold"
                            android:textStyle="bold"
                            android:layout_marginTop="6dp" />

                        <!-- Income and Expense Stats -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/spacing_large">

                            <!-- Income -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center_vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="↓"
                                        android:textColor="@color/on_primary"
                                        android:textSize="18sp"
                                        android:layout_marginEnd="6dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Tổng thu"
                                        android:textColor="#CDEAFF"
                                        android:textSize="16sp"
                                        android:fontFamily="@font/inter_regular" />

                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="36,000,000 VND"
                                    android:textColor="@color/on_primary"
                                    android:textSize="18sp"
                                    android:fontFamily="@font/inter_medium"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp"
                                    android:layout_gravity="center_horizontal"/>

                            </LinearLayout>

                            <!-- Expense -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:layout_gravity="center_horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="↑"
                                        android:textColor="@color/on_primary"
                                        android:textSize="18sp"
                                        android:layout_marginEnd="6dp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Tổng chi"
                                        android:textColor="#CDEAFF"
                                        android:textSize="16sp"
                                        android:fontFamily="@font/inter_regular" />

                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="16,000,000 VND"
                                    android:textColor="@color/on_primary"
                                    android:textSize="18sp"
                                    android:fontFamily="@font/inter_medium"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp"
                                    android:layout_gravity="center_horizontal"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Transactions Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/spacing_medium">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Thu chi"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/inter_bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ăn uống"
                        android:textColor="@color/primary"
                        android:textSize="14sp"
                        android:fontFamily="@font/inter_medium"
                        android:layout_marginStart="@dimen/spacing_small"
                        android:background="@drawable/bg_filter_selected"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_filter"
                        android:layout_marginStart="@dimen/spacing_small" />

                </LinearLayout>

                <!-- Transaction List -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hôm nay"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="@font/inter_regular" />

                    <!-- Transaction Item 1 -->
                    <LinearLayout
                        android:id="@+id/transactionItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="@dimen/spacing_medium"
                        android:background="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="46dp"
                            android:layout_height="46dp"
                            android:background="@drawable/ic_item_bg"
                            android:layout_marginEnd="10dp"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="@dimen/icon_medium"
                                android:layout_height="@dimen/icon_medium"
                                android:src="@drawable/ic_notification"
                                app:tint="@color/primary" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lương tháng 10"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:fontFamily="@font/inter_medium"
                                android:textStyle="bold"
                                android:layout_marginBottom="2dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lương thưởng"
                                android:textColor="@color/text_secondary"
                                android:textSize="13sp"
                                android:fontFamily="@font/inter_regular" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+ 5,000,000 VND"
                            android:textColor="@color/income"
                            android:textSize="17sp"
                            android:fontFamily="@font/inter_bold"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <!-- Transaction Item 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="@dimen/spacing_medium"
                        android:background="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="46dp"
                            android:layout_height="46dp"
                            android:background="@drawable/ic_item_bg"
                            android:layout_marginEnd="10dp"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="@dimen/icon_medium"
                                android:layout_height="@dimen/icon_medium"
                                android:src="@drawable/ic_notification"
                                app:tint="@color/primary" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Trả tiền thuê nhà"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:fontFamily="@font/inter_medium"
                                android:textStyle="bold"
                                android:layout_marginBottom="2dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chỗ ở"
                                android:textColor="@color/text_secondary"
                                android:textSize="13sp"
                                android:fontFamily="@font/inter_regular" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- 2,000,000 VNĐ"
                            android:textColor="@color/expense"
                            android:textSize="17sp"
                            android:fontFamily="@font/inter_bold"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <!-- Transaction Item 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="@dimen/spacing_medium"
                        android:background="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="46dp"
                            android:layout_height="46dp"
                            android:background="@drawable/ic_item_bg"
                            android:layout_marginEnd="10dp"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="@dimen/icon_medium"
                                android:layout_height="@dimen/icon_medium"
                                android:src="@drawable/ic_notification"
                                app:tint="@color/primary" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ăn trưa"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:fontFamily="@font/inter_medium"
                                android:textStyle="bold"
                                android:layout_marginBottom="2dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ăn uống"
                                android:textColor="@color/text_secondary"
                                android:textSize="13sp"
                                android:fontFamily="@font/inter_regular" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- 100,000 VNĐ"
                            android:textColor="@color/expense"
                            android:textSize="17sp"
                            android:fontFamily="@font/inter_bold"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <!-- Date Separator -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thứ Ba, 25/11"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="@font/inter_regular"
                        android:layout_marginTop="8dp"/>

                    <!-- Transaction Item 4 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="@dimen/spacing_medium"
                        android:background="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="46dp"
                            android:layout_height="46dp"
                            android:background="@drawable/ic_item_bg"
                            android:layout_marginEnd="10dp"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="@dimen/icon_medium"
                                android:layout_height="@dimen/icon_medium"
                                android:src="@drawable/ic_notification"
                                app:tint="@color/primary" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ăn tối"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:fontFamily="@font/inter_medium"
                                android:textStyle="bold"
                                android:layout_marginBottom="2dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ăn uống"
                                android:textColor="@color/text_secondary"
                                android:textSize="13sp"
                                android:fontFamily="@font/inter_regular" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- 50,000 VNĐ"
                            android:textColor="@color/expense"
                            android:textSize="17sp"
                            android:fontFamily="@font/inter_bold"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <!-- Transaction Item 5 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="@dimen/spacing_medium"
                        android:background="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="46dp"
                            android:layout_height="46dp"
                            android:background="@drawable/ic_item_bg"
                            android:layout_marginEnd="10dp"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="@dimen/icon_medium"
                                android:layout_height="@dimen/icon_medium"
                                android:src="@drawable/ic_notification"
                                app:tint="@color/primary" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thưởng dự án"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:fontFamily="@font/inter_medium"
                                android:textStyle="bold"
                                android:layout_marginBottom="2dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lương thưởng"
                                android:textColor="@color/text_secondary"
                                android:textSize="13sp"
                                android:fontFamily="@font/inter_regular" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+ 300,000 VNĐ"
                            android:textColor="@color/income"
                            android:textSize="17sp"
                            android:fontFamily="@font/inter_bold"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- Bottom spacing for FAB -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Custom Bottom Navigation Bar -->
    <include
        android:id="@+id/bottom_navigation"
        layout="@layout/custom_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="16dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/primary"
        app:borderWidth="0dp"
        app:fabSize="normal"
        app:layout_anchor="@id/bottom_navigation"
        app:layout_anchorGravity="top|center"
        app:maxImageSize="32dp"
        app:tint="@color/white"
        android:translationY="-36dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>