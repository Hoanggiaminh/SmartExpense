<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".TransactionDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/bg_img"
            android:orientation="vertical"
            android:padding="@dimen/spacing_medium">

            <!-- Title with back button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="@dimen/spacing_large">

                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_arrow_back"
                    app:tint="@color/white"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Chi tiết giao dịch"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/inter_bold"
                    android:textStyle="bold"
                    android:gravity="center" />

                <View
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

            </LinearLayout>
        </LinearLayout>

        <!-- Form Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="32dp"
            android:paddingBottom="24dp"
            android:layout_marginTop="-110dp"
            android:background="@drawable/bg_trans_details">

            <!-- Amount and Transaction Type -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/spacing_small">

                <!-- Category Icon -->
                <LinearLayout
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:background="@drawable/ic_item_bg_circle"
                    android:gravity="center"
                    android:layout_gravity="center">
                    <ImageView
                        android:id="@+id/iv_category_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_notification"
                        app:tint="@color/primary" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp">
                <!-- Amount -->
                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5,000,000 VND"
                    android:textColor="@color/income"
                    android:textSize="24sp"
                    android:fontFamily="@font/inter_bold"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/spacing_small" />

                <!-- Transaction Type Badge -->
                <TextView
                    android:id="@+id/tv_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thu nhập"
                    android:textColor="@color/income"
                    android:textSize="14sp"
                    android:fontFamily="@font/inter_medium"
                    android:background="@drawable/bg_income_badge"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="30dp">

                <!-- Loại giao dịch -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loại giao dịch"
                    android:textColor="@color/text_hint"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/inter_bold"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:id="@+id/layout_transaction_type"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_edittext"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:layout_marginBottom="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/tv_transaction_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Thu nhập"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="@font/inter_regular" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_arrow_drop_down"
                        app:tint="@color/text_secondary" />

                </LinearLayout>

                <!-- Tiêu đề -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiêu đề"
                    android:textColor="@color/text_hint"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/inter_bold"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/et_title"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_edittext"
                    android:text="Lương tháng 10"
                    android:hint="Nhập tiêu đề"
                    android:textColorHint="@color/text_secondary"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:fontFamily="@font/inter_regular"
                    android:paddingHorizontal="16dp"
                    android:inputType="text"
                    android:layout_marginBottom="20dp" />

                <!-- Số tiền -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số tiền"
                    android:textColor="@color/text_hint"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/inter_bold"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/et_amount"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_edittext"
                    android:text="5000000"
                    android:hint="Nhập số tiền"
                    android:textColorHint="@color/text_secondary"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:fontFamily="@font/inter_regular"
                    android:paddingHorizontal="16dp"
                    android:inputType="number"
                    android:layout_marginBottom="20dp" />

                <!-- Danh mục -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Danh mục"
                    android:textColor="@color/text_hint"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/inter_bold"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:id="@+id/layout_category"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_edittext"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:layout_marginBottom="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/tv_category"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lương thưởng"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="@font/inter_regular" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_arrow_drop_down"
                        app:tint="@color/text_secondary" />

                </LinearLayout>

                <!-- Ngày -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày"
                    android:textColor="@color/text_hint"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/inter_bold"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:id="@+id/layout_date"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_edittext"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:layout_marginBottom="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="25/11/2025"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="@font/inter_regular" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_calendar_today"
                        app:tint="@color/text_secondary" />

                </LinearLayout>

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/spacing_large">

                <!-- Cập nhật Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_update"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="CẬP NHẬT"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/inter_bold"
                    android:textStyle="bold"
                    app:backgroundTint="@color/primary"
                    app:cornerRadius="14dp"
                    android:elevation="4dp" />

                <!-- Xóa Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_delete"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="XÓA"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/inter_bold"
                    android:textStyle="bold"
                    app:backgroundTint="@color/expense"
                    app:cornerRadius="14dp"
                    android:elevation="4dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>