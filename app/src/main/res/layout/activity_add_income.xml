<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_general_icon"
            android:rotation="180"
            android:contentDescription="@string/back"
            app:tint="@color/text_primary"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thêm Thu Nhập"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <View
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/btnAddIncome"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingBottom="20dp">

            <!-- Calendar Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Month Navigation -->
                    <LinearLayout
                        android:id="@+id/monthHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:id="@+id/btnPrevMonth"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:padding="6dp"
                            android:src="@drawable/ic_general_icon"
                            android:rotation="180"
                            android:visibility="gone"
                            android:contentDescription="@string/previous_month"
                            app:tint="#6B7280"/>

                        <TextView
                            android:id="@+id/tvMonthYear"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="February - 2023"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:gravity="center"/>

                        <ImageView
                            android:id="@+id/btnNextMonth"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:padding="6dp"
                            android:src="@drawable/ic_general_icon"
                            android:visibility="gone"
                            android:contentDescription="@string/next_month"
                            app:tint="#6B7280"/>
                    </LinearLayout>

                    <!-- Day of Week Labels -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="S"
                            android:textSize="12sp"
                            android:textColor="#9CA3AF"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="M"
                            android:textSize="12sp"
                            android:textColor="#9CA3AF"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="T"
                            android:textSize="12sp"
                            android:textColor="#9CA3AF"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="W"
                            android:textSize="12sp"
                            android:textColor="#9CA3AF"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="T"
                            android:textSize="12sp"
                            android:textColor="#9CA3AF"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="F"
                            android:textSize="12sp"
                            android:textColor="#9CA3AF"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="S"
                            android:textSize="12sp"
                            android:textColor="#9CA3AF"
                            android:gravity="center"/>
                    </LinearLayout>

                    <!-- Calendar Days RecyclerView -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvCalendar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:itemCount="7"
                        tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        tools:spanCount="7"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Income Title Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Tiêu đề thu nhập"
                android:textColor="#6B7280"
                android:textStyle="bold"
                android:textSize="13sp"/>

            <EditText
                android:id="@+id/etIncomeTitle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_input_border"
                android:hint="VD: Lương tháng 2"
                android:paddingHorizontal="16dp"
                android:textSize="15sp"
                android:inputType="text"
                android:maxLines="1"/>

            <!-- Amount Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Số tiền"
                android:textColor="#6B7280"
                android:textStyle="bold"
                android:textSize="13sp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/etAmount"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_input_border"
                    android:hint="0.00"
                    android:inputType="numberDecimal"
                    android:paddingStart="16dp"
                    android:paddingEnd="50dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$"
                    android:textSize="18sp"
                    android:textColor="#9CA3AF"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="16dp"/>
            </FrameLayout>

            <!-- Category Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Danh mục thu nhập"
                android:textColor="#6B7280"
                android:textStyle="bold"
                android:textSize="13sp"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupCategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:singleSelection="true"
                app:selectionRequired="false">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipAddCategory"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:chipBackgroundColor="@android:color/white"
                    app:chipStrokeWidth="1dp"
                    app:chipStrokeColor="#E5E7EB"
                    app:chipCornerRadius="8dp"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipSalary"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lương"
                    app:chipBackgroundColor="@android:color/white"
                    app:chipStrokeWidth="1dp"
                    app:chipStrokeColor="#E5E7EB"
                    app:chipCornerRadius="8dp"
                    app:checkedIconVisible="false"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipReward"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thưởng"
                    android:checked="true"
                    app:chipBackgroundColor="@color/primary"
                    android:textColor="@android:color/white"
                    app:chipCornerRadius="8dp"
                    app:checkedIconVisible="false"/>
            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>
    </ScrollView>

    <!-- Add Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddIncome"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="20dp"
        android:text="THÊM THU NHẬP"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:cornerRadius="12dp"
        app:backgroundTint="@color/primary"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>