<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/spacing_xlarge"
    android:paddingTop="100dp">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập mã xác thực"
        android:textColor="@color/text_primary"
        android:textSize="24sp"
        android:fontFamily="@font/inter"
        android:textStyle="bold"
        android:letterSpacing="0.02"
        android:layout_marginBottom="16dp"/>

    <!-- Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vui lòng kiểm tra email và nhập mã xác thực để hoàn thành quá trình thiết lập lại mật khẩu"
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        android:fontFamily="@font/inter"
        android:letterSpacing="0.02"
        android:layout_marginBottom="40dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- OTP Input Fields -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <EditText
                android:id="@+id/et_otp_1"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginEnd="14dp"
                android:background="@drawable/bg_otp_input"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:fontFamily="@font/inter"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_otp_2"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginEnd="14dp"
                android:background="@drawable/bg_otp_input"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:fontFamily="@font/inter"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_otp_3"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginEnd="14dp"
                android:background="@drawable/bg_otp_input"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:fontFamily="@font/inter"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_otp_4"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginEnd="14dp"
                android:background="@drawable/bg_otp_input"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:fontFamily="@font/inter"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_otp_5"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/bg_otp_input"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:fontFamily="@font/inter"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Verify Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_verify"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:text="XÁC NHẬN"
            android:textColor="@color/on_primary"
            android:textSize="16sp"
            android:fontFamily="@font/inter"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            app:backgroundTint="@color/primary"
            app:cornerRadius="14dp"
            style="@style/Widget.Material3.Button" />

        <!-- Resend Link -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chưa nhận được mã? "
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:fontFamily="@font/inter" />

            <TextView
                android:id="@+id/tv_resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gửi lại"
                android:textColor="@color/primary"
                android:textSize="14sp"
                android:fontFamily="@font/inter"
                android:textStyle="bold"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="4dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
