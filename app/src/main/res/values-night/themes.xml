<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for Dark Mode -->
    <style name="Base.Theme.SmartExpense" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">#42A5F5</item>
        <item name="colorPrimaryVariant">#1976D2</item>
        <item name="colorOnPrimary">#000000</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">#FFB74D</item>
        <item name="colorSecondaryVariant">#FF6D00</item>
        <item name="colorOnSecondary">#000000</item>

        <!-- Background Colors -->
        <item name="android:colorBackground">#121212</item>
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnBackground">#FFFFFF</item>
        <item name="colorOnSurface">#FFFFFF</item>

        <!-- Font Family -->
        <item name="fontFamily">@font/inter</item>
        <item name="android:fontFamily">@font/inter</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">#000000</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>